<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xmlns:util="http://www.springframework.org/schema/util" xmlns:cxf="http://cxf.apache.org/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
             http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
             http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">

    <cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>

    <jaxrs:server id="flightSearchService" address="/searchFlights">
        <jaxrs:serviceBeans>
            <ref bean="flightSearchServiceBean"/>
            <ref bean="airportServiceBean"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <ref bean='jsonProvider' />
        </jaxrs:providers>
    </jaxrs:server>

    <bean id="jsonProvider"
    class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>

    <bean id="flightSearchServiceBean" class="services.FlightSearchService"/>
    <bean id="airportServiceBean" class="services.AirportService"/>

</beans>